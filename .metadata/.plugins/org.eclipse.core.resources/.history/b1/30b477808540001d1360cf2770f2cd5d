package iVoteSimulator;

import java.util.ArrayList;

public class MultiQuestion implements Question {

	private String multQuestion;
	private String multAnswer;
	
	public MultiQuestion(String multQuestion, String multAnswer) {
		this.multQuestion = multQuestion;
		this.multAnswer = multAnswer;
	}
		
	@Override
	public boolean isSingleQuestion() {
		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public String questions() {
		// TODO Auto-generated method stub
		return multQuestion;
	}

	@Override
	public String answers() {
		// TODO Auto-generated method stub
		return multAnswer;
	}

	@Override
	public void getQuestion(String question) {
		// TODO Auto-generated method stub
		this.multQuestion = question;
		
	}

	@Override
	public void getAnswer(String answer) {
		// TODO Auto-generated method stub
		this.multAnswer = answer;
	}

}
