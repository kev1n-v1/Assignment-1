package iVoteSimulator;

import java.util.ArrayList;

public class SingleQuestion implements Question {
	
	private String singleQuest;
	private ArrayList<String> singleAnswer;
	
	public SingleQuestion (String singleQuest, ArrayList<String> singleAnswer) {
		
		this.singleAnswer = singleAnswer;
		this.singleQuest = singleQuest;
	}

	@Override
	public String getQuestion() {
		
		return singleQuest;
	}

	@Override
	public ArrayList<String> getAnswer() {
		// TODO Auto-generated method stub
		return singleAnswer;
	}

	@Override
	public boolean isSingleQuestion() {
		// TODO Auto-generated method stub
		return true;
	}


}
